<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security.xsd">

	<global-method-security pre-post-annotations="enabled" />

	<http use-expressions="true">
		<intercept-url pattern="/admin/**" access="hasRole('ROLE_ADMIN')"
			requires-channel="any" />
		<intercept-url pattern="/materials/full**"
			access="hasAnyRole('ROLE_ADMIN', 'ROLE_TEACHER', 'ROLE_PARTICIPANT')"
			requires-channel="any" />
		<intercept-url pattern="/materials/example" access="permitAll"
			requires-channel="any" />
		<intercept-url pattern="/course_type/**" access="hasRole('ROLE_ADMIN')"
			requires-channel="any" />
		<intercept-url pattern="/course/available.html"
			access="hasAnyRole('ROLE_ADMIN', 'ROLE_USER', 'ROLE_PARTICIPANT')"
			requires-channel="any" />
		<intercept-url pattern="/course/my.html" access="isAuthenticated()"
			requires-channel="any" />
		<intercept-url pattern="/user/**" access="isAuthenticated()"
			requires-channel="any" />
		<intercept-url pattern="/**" access="permitAll"
			requires-channel="any" />
		<form-login login-page="/login.html" />
		<logout logout-url="/logout.html" delete-cookies="JSESSIONID" invalidate-session="true" />
		<csrf />
		<headers />
		<session-management invalid-session-url="/invalidate.html" session-fixation-protection="newSession">
			<concurrency-control max-sessions="1" expired-url="/invalidate.html"/>
		</session-management>
	</http>
	


	<authentication-manager>
		<authentication-provider>
			<password-encoder hash="bcrypt" />
			<jdbc-user-service data-source-ref="dataSource"
				authorities-by-username-query="select login.login, role.name from login
			     join role on role.id = login.role_id where login.login = ?"
				users-by-username-query="select login, password, 1 from login where login = ?" />
		</authentication-provider>

	</authentication-manager>

</beans:beans>
